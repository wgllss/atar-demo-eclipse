<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_title_bar_height" >

    <ImageView
        android:id="@+id/img_common_top_left"
        android:layout_width="@dimen/activity_top_title_bar_height"
        android:layout_height="@dimen/activity_top_title_bar_height"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:padding="11.5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/txt_common_top_left"
        android:layout_width="@dimen/activity_top_title_bar_height"
        android:layout_height="@dimen/activity_top_title_bar_height"
        android:focusable="true"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_common_top_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_common_top_title_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/txt_common_top_title"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:textSize="11dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_common_top_right"
        android:layout_width="@dimen/activity_top_title_bar_height"
        android:layout_height="@dimen/activity_top_title_bar_height"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textSize="15dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_common_top_right"
        android:layout_width="@dimen/activity_top_title_bar_height"
        android:layout_height="@dimen/activity_top_title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:padding="11.5dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

</RelativeLayout>